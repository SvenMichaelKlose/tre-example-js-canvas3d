(var *x* 0)                                                                                               
(var *y* 0)
(var *z* 180)

(fn whirl (vertices faces)
  (do-wait 10
    (update-canvas)
    (clear-canvas *ctx*)
    (render-scene vertices faces *x* *y* *z* 0 0 80)
    (++! *x*)
    (++! *y*)
    (++! *z*)
    (whirl vertices faces)))

(fn start-site ()
  (document-extend)
  (= document.body.style.margin 0)
  (disable-scrollbars)
  (with ((vertices faces) (make-3d-object *vertices* *faces*))
    (= *texture* (make-video :width 640 :height 480 :webm "video.mp4" :loop? t :autoplay? t))
    (document.body.add *texture*)
    (*texture*.hide)
    (= *texture*.muted t)
    (native-add-event-listener *texture* "play" #'(() (whirl vertices faces)))))

(add-onload #'start-site)
